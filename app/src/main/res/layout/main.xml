<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">




    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="337dp"
        android:layout_height="211dp"
        android:measureAllChildren="false"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <FrameLayout
            android:id="@+id/drawing_surface"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_toEndOf="@+id/imageView1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            android:layout_gravity="center">


        </FrameLayout>

    </FrameLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:textSize="100dp"
        android:singleLine="false"
        android:textColorLink="#ff3840ff"
        android:textIsSelectable="false"
        android:textColor="#ff2835ff"
        android:visibility="visible"
        android:gravity="center"
        android:text="ew"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:phoneNumber="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linearLayoutDown"
        android:background="#ff0064ff"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"><![CDATA[>



        ]]>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button"
            android:background="@drawable/start_shadow" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linearLayout"
        android:background="#ff0064ff"
        android:gravity="center"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/lastPhoto"
            android:adjustViewBounds="false" />

        <Button
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/number_of_images_shadow"
            android:id="@+id/button_number_of_images"
            android:text="1"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <Button
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/button_timer"
            android:background="@drawable/timer_zero_shadw"
            android:layout_gravity="center" />

        <Button
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/button_flash"
            android:background="@drawable/flash_off_shadow"
            android:layout_gravity="center" />

        <Button
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/button_sound"
            android:background="@drawable/volume_on_shadow"
            android:layout_gravity="center" />

        <Button
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/button_change_camera"
            android:background="@drawable/change_camera_shadow" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/layoutLandscapeAssist"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_alignWithParentIfMissing="false"
        android:layout_above="@+id/linearLayoutDown"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutHorizontalAssist">


    </LinearLayout>

    <com.nhaarman.supertooltips.ToolTipRelativeLayout
        android:id="@+id/activity_main_tooltipRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true" >

    </com.nhaarman.supertooltips.ToolTipRelativeLayout>


</RelativeLayout>
